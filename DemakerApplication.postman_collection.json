	"item": [
		{
			"name": "POST LoginEndpoint",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test 1: Check status code\r",
							"pm.test(\"Login successful\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Test 2: Check response has token\r",
							"pm.test(\"Response has accessToken\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property('accessToken');\r",
							"});\r",
							"\r",
							"// Auto-save token to collection variable\r",
							"if (pm.response.code === 200) {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.collectionVariables.set(\"authToken\", jsonData.accessToken);\r",
							"    console.log(\"Token saved:\", jsonData.accessToken);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
